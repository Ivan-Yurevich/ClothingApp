<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <title>ClothingApp</title>
</head>
<body>
    <div class="weather">
        <div class="menu">
            <div class="form-search">
                <input id="place" type="text" placeholder="Введите город">
                <button class="btn" type="submit"></button>
            </div>
            <div class="menu-choice">
                <a href="" class="today">Сегодня</a>
                <a href="" class="tomorrow">Завтра</a>
                <a href="" class="week">Неделя</a>
            </div>
            <div class="gender">
                <div class="gender-item man">
                    <input id="fid-1" type="radio" name="radio" value="off" checked>
                    <label for="fid-1">М</label>
                </div>
                <div class="gender-item woman">
                    <input id="fid-2" type="radio" name="radio" value="on">
                    <label for="fid-2">Ж</label>
                </div>
            </div>
        </div>
        <div class="weather-window">
            <div class="weather-headlines">
                <table class="headlines">
                    <tr>
                        <td class="date">25</td>
                        <td class="month">июня,<br>сегодня</td>
                        <td class="char"></td>
                        <td class="pressure">Давление,<br>мм.рт.ст</td>
                        <td class="humidity">Влажность</td>
                        <td class="wind">Ветер,<br>м/с</td>
                        <td class="feels-like">Ощущается как</td>
                    </tr>
                </table>
                <div class="advice">
                    <b>Совет:</b><br>
                </div>
            </div>
            <div class="hourly-weather">
                <table class="table-weather">
                    <tr>
                        <td class="temp">Утром<br><b>+10...+15</b></td>
                        <td class="characteristic">Облачно</td>
                        <td class="pressure-num">752</td>
                        <td class="humidity-num">70%</td>
                        <td class="wind-num">4,3</td>
                        <td class="feels-like-num">+10</td>
                    </tr>
                    <tr>
                        <td class="temp">Днем<br><b>+10...+15</b></td>
                        <td class="characteristic">Облачно</td>
                        <td class="pressure-num">752</td>
                        <td class="humidity-num">70%</td>
                        <td class="wind-num">4,3</td>
                        <td class="feels-like-num">+10</td>
                    </tr>
                    <tr>
                        <td class="temp">Вечером<br><b>+10...+15</b></td>
                        <td class="characteristic">Облачно</td>
                        <td class="pressure-num">752</td>
                        <td class="humidity-num">70%</td>
                        <td class="wind-num">4,3</td>
                        <td class="feels-like-num">+10</td>
                    </tr>                   
                </table>
            </div>
        </div>
    </div>
    <div class="clothes">
        <div class="icons">
            <div class="outwear">
                @*<img class="outwear-img" src="/icons/jacket.jpg">*@
            </div>
            <div class="body-clother">
                @*<img class="body-img" src="/icons/t-short.jpg">*@
            </div>
            <div class="legs-clotger">
                @*<img class="legs-img" src="/icons/trousers.jpg">*@
            </div>
            <div class="shoes">
                @*<img src="/icons/sneakers.jpg">*@
            </div>
            <div class="accessory">
                @*<img src="/icons/umbrella.jpg">*@
            </div>
        </div>
    </div>
</body>
</html>